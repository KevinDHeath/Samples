<Application x:Class="WPFApplication.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPFApplication"
             StartupUri="MainWindow.xaml">
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/WPFCustomControlLib;component/Themes/Button.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/WPFCustomControlLib;component/Themes/ListView.xaml"/>
      </ResourceDictionary.MergedDictionaries>

      <Style x:Key="appWindow" TargetType="{x:Type Window}">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Height" Value="450"/>
        <Setter Property="Width" Value="800"/>
      </Style>

      <Style x:Key="appViewTitleStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="Margin" Value="0"/>
      </Style>

    </ResourceDictionary>
  </Application.Resources>
</Application>