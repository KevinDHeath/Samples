@page
@model AmyGameOver
@{ ViewData["Title"] = "game over"; }
<head>
	<script language="javascript" type="text/javascript">var hands = 2; var winner = true;</script>
</head>

<div class="fixedHeader">
	<div class="pageHeader level mb-0 py-2 px-4">
		<div class="level-left">Game target: $250,000</div>
		<div class="level-center">Winner!</div>
		<div class="level-right game-datetime">July 1, 2024 10:59 AM</div>
	</div>
</div>

<div class="fixedContent">
	<nav id="showInPlay" class="my-1 px-2 is-hidden" role="navigation">
		<a id="inPlay" class="button" onclick="toggleInPlay()">Show in hand</a>
	</nav>
	<div class="columns pl-2 pr-2 fixedContent">
		<div id="Resizer" class="is-hidden"></div>
		<div class="column">
			<nav class="menu sticky">
				<p class="menu-label"><strong>Amy</strong></p>
				<ul id="InThisArticleMenu" class="menu-list">
					<li><a id="inHandLink" class="quickLink is-hidden">In hand</a></li>
					<li><a class="quickLink">Stash pile</a></li>
					<li><a id="scoreCardsLink" class="quickLink is-hidden">Score cards</a></li>
				</ul>
			</nav>
		</div>
		<div class="column content is-8">
			<table class="table">
				<tr>
					<td class="game-card"><img class="image" title="by Bob when stash was 335,000 (round 20)" src="https://KevinDHeath.github.io/score/media/HeatOn-Bust.png"></td>
					<td>
						<p style="margin-bottom: 0px;">Game total: $312,000<br />Stash total: $335,000</p>
						<div style="height: 110px; overflow: auto;">
							<table style="height: 110px;" class="table">
								<tr>
									<td>
										<ul style="margin-left: 9px; margin-top: 0px;">
											<li class="hassle-history">Heat on Bust by Bob when stash was 335,000 (round 20)</li>
											<li class="hassle-history">Heat off Search and seizure played (round 19)</li>
											<li class="hassle-history">Heat on Search and seizure by John when stash was 330,000 (round 18)</li>
											<li class="hassle-history">Heat off Pay fine played (round 16)</li>
											<li class="hassle-history">Heat on Bust by Bob when stash was 135,000 (round 15)</li>
											<li class="hassle-history">Heat off Pay fine played (round 12)</li>
											<li class="hassle-history">Heat on Felony by Janis when stash was 90,000 (round 11)</li>
											<li class="hassle-history">Heat off Search and seizure played (round 11)</li>
											<li class="hassle-history">Heat on Search and seizure by Janis when stash was 90,000 (round 10)</li>
											<li class="hassle-history">Heat off Detained played (round 9)</li>
											<li class="hassle-history">Heat on Detained by Bob when stash was 90,000 (round 8)</li>
										</ul>
									</td>
								</tr>
							</table>
						</div>
					</td>
				</tr>
			</table>
			<div id="inHand" class="is-hidden">
				<h2 class="quickLinkHeader"><span class="icon toggleSection"><i class="fa fa-angle-down"></i></span>In hand</h2>
				<table class="table">
					<tr>
						<td class="game-card"><img class="image" src="https://KevinDHeath.github.io/score/media/Skim-StealYourNeighborsPot.png"></td>
						<td class="game-card"><img class="image" src="https://KevinDHeath.github.io/score/media/Market-Open.png"></td>
						<td class="game-card"><img class="image" src="https://KevinDHeath.github.io/score/media/Skim-StealYourNeighborsPot.png"></td>
						<td class="game-card"><img class="image" title="passed by John (round 19)" src="https://KevinDHeath.github.io/score/media/Market-Open.png"></td>
						<td class="game-card"><img class="image" title="passed by John (round 20)" src="https://KevinDHeath.github.io/score/media/HeatOff-SearchAndSeizure.png"></td>
						<td class="game-card"><img class="image" src="https://KevinDHeath.github.io/score/media/Market-Close.png"></td>
					</tr>
				</table>
			</div>
			<h2 class="quickLinkHeader"><span class="icon toggleSection"><i class="fa fa-angle-down"></i></span>Stash pile</h2>
			<table class="table">
				<tr>
					<td class="game-card"><img class="image" src="https://KevinDHeath.github.io/score/media/Peddle-Dr.Feelgood.png"></td>
					<td class="game-card"><img class="image" src="https://KevinDHeath.github.io/score/media/Peddle-Panama.png"></td>
					<td class="game-card"><img class="image" src="https://KevinDHeath.github.io/score/media/Peddle-Panama.png"></td>
					<td class="game-card"><img class="image" src="https://KevinDHeath.github.io/score/media/Peddle-Columbia.png"></td>
					<td class="game-card"><img class="image" src="https://KevinDHeath.github.io/score/media/Peddle-Columbia.png"></td>
					<td class="game-card"><img class="image" src="https://KevinDHeath.github.io/score/media/Peddle-Jamaica.png"></td>
				</tr>
				<tr>
					<td class="game-card"><img class="image" src="https://KevinDHeath.github.io/score/media/Peddle-Jamaica.png"></td>
					<td class="game-card"><img class="image" title="played (round 3)" src="https://KevinDHeath.github.io/score/media/Protection-GrabaSnack.png"></td>
					<td class="game-card"><img class="image" src="https://KevinDHeath.github.io/score/media/Peddle-Mexico.png"></td>
					<td class="game-card"><img class="image" src="https://KevinDHeath.github.io/score/media/media/Peddle-Mexico.png"></td>
				</tr>
				</table>
				<div id="scoreCards" class="">
				<h2 class="quickLinkHeader"><span class="icon toggleSection"><i class="fa fa-angle-down"></i></span>Score cards</h2>
				<div class="columns is-multiline">
					<div class="column">
						<table class="score-card">
							<tr><th colspan='2'>2nd Hand</th></tr>
							<tr><td>Protected profit</td><td class="align-right">25,000</td></tr>
							<tr><td>+ At risk profit</td><td class="align-right">310,000</td></tr>
							<tr><td>- Banker's skim /+ bonus</td><td class="align-right"><span class="negative-value">62,000</span></td></tr>
							<tr><td>- Highest Peddle in hand</td><td class="align-right">0</td></tr>
							<tr><td>- Paranoia</td><td class="align-right">0</td></tr>
							<tr><td>= Net profit</td><td class="align-right">273,000</td></tr>
							<tr><td nowrap>+ Bonus for winner of hand</td><td class='align-right'>25,000</td></tr>
							<tr><td>Total</td><td class="align-right">298,000</td></tr>
						</table>
					</div>
					<div class="column">
						<table class="score-card">
							<tr><th colspan='2'>1st Hand</th></tr>
							<tr><td>Protected profit</td><td class="align-right">0</td></tr>
							<tr><td>+ At risk profit</td><td class="align-right">80,000</td></tr>
							<tr><td>- Banker's skim /+ bonus</td><td class="align-right"><span class="negative-value">16,000</span></td></tr>
