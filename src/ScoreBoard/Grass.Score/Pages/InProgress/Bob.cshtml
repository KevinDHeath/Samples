@page
@model BobInProgress
@{ ViewData["Title"] = "game in progress"; }
<head>
	<script language="javascript" type="text/javascript">var hands = 1;</script>
</head>

<div class="fixedHeader">
	<div class="pageHeader level mb-0 py-2 px-4">
		<div class="level-left">Game target: $250,000</div>
		<div class="level-center">Hand #2</div>
		<div class="level-right game-datetime">July 2, 2024 07:58 PM</div>
	</div>
</div>

<div class="fixedContent">
	<nav id="showInPlay" class="my-1 px-2" role="navigation">
		<a id="inPlay" class="button" onclick="toggleInPlay()">Show in hand</a>
	</nav>
	<div class="columns pl-2 pr-2 fixedContent">
		<div id="Resizer" class="is-hidden"></div>
		<div class="column">
			<nav class="menu sticky">
				<p class="menu-label"><strong>Bob</strong></p>
				<ul id="InThisArticleMenu" class="menu-list">
					<li><a id="inHandLink" class="quickLink is-hidden">In hand</a></li>
					<li><a class="quickLink">Stash pile</a></li>
					<li><a id="scoreCardsLink" class="quickLink is-hidden">Score cards</a></li>
				</ul>
			</nav>
		</div>
		<div class="column content is-8">
			<table class="table">
				<tr>
					<td class="game-card"><img class="image" title="played (round 1)" src="https://KevinDHeath.github.io/score/media/Market-Open.png"></td>
					<td><p style="margin-bottom: 0px;">Game total: $10,000<br />Stash total: $55,000</p></td>
					<td><br />* <i>Playing round 7</i></td>
				</tr>
			</table>
			<div id="inHand" class="is-hidden">
				<h2 class="quickLinkHeader"><span class="icon toggleSection"><i class="fa fa-angle-down"></i></span>In hand</h2>
				<table class="table">
					<tr>
						<td class="game-card"><img class="image" src="https://KevinDHeath.github.io/score/media/Nirvana-Stonehigh.png"></td>
						<td class="game-card"><img class="image" src="https://KevinDHeath.github.io/score/media/HeatOff-Bust.png"></td>
						<td class="game-card"><img class="image" src="https://KevinDHeath.github.io/score/media/HeatOff-Detained.png"></td>
						<td class="game-card"><img class="image" src="https://KevinDHeath.github.io/score/media/HeatOn-SearchAndSeizure.png"></td>
						<td class="game-card"><img class="image" src="https://KevinDHeath.github.io/score/media/Paranoia-Soldout.png"></td>
						<td class="game-card"><img class="image" src="https://KevinDHeath.github.io/score/media/HeatOn-Detained.png"></td>
						<td class="game-card"><img class="image" src="https://KevinDHeath.github.io/score/media/Paranoia-UtterlyWipedOut.png"></td>
					</tr>
				</table>
			</div>
			<h2 class="quickLinkHeader"><span class="icon toggleSection"><i class="fa fa-angle-down"></i></span>Stash pile</h2>
			<table class="table">
				<tr>
					<td class="game-card"><img class="image" src="https://KevinDHeath.github.io/score/media/Peddle-Panama.png"></td>
					<td class="game-card"><img class="image" src="https://KevinDHeath.github.io/score/media/Peddle-Homegrown.png"></td>
				</tr>
			</table>
			<div id="scoreCards" class="">
				<h2 class="quickLinkHeader"><span class="icon toggleSection"><i class="fa fa-angle-down"></i></span>Score cards</h2>
				<div class="columns is-multiline">
					<div class="column">
						<table class="score-card">
							<tr><th colspan="2">1st Hand</th></tr>
							<tr><td>Protected profit</td><td class="align-right">50,000</td></tr>
							<tr><td>+ At risk profit</td><td class="align-right">60,000</td></tr>
							<tr><td>- Banker's skim /+ bonus</td><td class="align-right">0</td></tr>
							<tr><td>- Highest Peddle in hand</td><td class="align-right">0</td></tr>
							<tr><td>- Paranoia</td><td class="align-right">100,000</td></tr>
							<tr><td>= Net profit</td><td class="align-right">10,000</td></tr>
							<tr><td>+ Bonus for winner of hand</td><td class="align-right">0</td>
							<tr><td>Total</td><td class="align-right">10,000</td></tr>
						</table>
					</div>
				</div>
			</div>
		</div>
		<div class="column">
			<nav class="menu sticky">
				<p class="menu-label"><strong>Players</strong></p>
				<ul class="toc-menu">
					<li><a asp-area="" asp-page="/InProgress/Amy">Amy</a></li>
					<li><a class="player-current">Bob</a></li>
					<li><a asp-area="" asp-page="/InProgress/Janis">Janis</a></li>
					<li><a asp-area="" asp-page="/InProgress/John">John</a></li>
				</ul>
			</nav>
		</div>
	</div>
</div>

<script>
	$(function () {
		initializePage();
		InitializeQuickLinks();

		$(".toggleSection").click(function () {
			SectionExpandCollapse(this);
		});

		$(".toggleSection").keypress(function () {
			SectionExpandCollapseCheckKey(this, event)
		});
	});
</script>